<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#6cccde</item>
    </style>

    <style name="TabTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:colorPrimary">#6cccde</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#2898ad</item>
        <item name="colorAccent">#6cccde</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bmdohyun</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>
