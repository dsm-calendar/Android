<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="260dp"
    android:layout_height="280dp">

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6cccde"
        android:gravity="center"
        android:text="@string/logout"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bm_dohyun"/>

    <ImageView
        android:id="@+id/iv_logout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_logout"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logout_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="정말로 로그아웃하시겠습니까?"
        android:textSize="12dp"
        android:fontFamily="@font/nanumsquare_r"/>

    <Button
        android:id="@+id/button_logout_confirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_logout_cancel"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:fontFamily="@font/bm_dohyun"
        android:background="#e9e7e7"/>

    <Button
        android:id="@+id/button_logout_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logout_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_logout_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:fontFamily="@font/bm_dohyun"
        android:background="#cbcbcb"/>

</androidx.constraintlayout.widget.ConstraintLayout>