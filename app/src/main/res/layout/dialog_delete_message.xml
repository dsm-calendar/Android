<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_dialog_delete_message_click_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6cccde"/>

    <ImageButton
        android:id="@+id/button_delete_message_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_dialog_delete_message_click_background"
        app:layout_constraintStart_toStartOf="@id/view_dialog_delete_message_click_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_cross_out"
        android:background="@null"/>

    <ImageView
        android:id="@+id/iv_delete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_dialog_delete_message_click_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_trash"/>

    <TextView
        android:id="@+id/tv_delete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_delete_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="정말 요청을 삭제하시겠습니까?"
        android:fontFamily="@font/nanumsquare_r"/>

    <Button
        android:id="@+id/button_delete_message_yes"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_delete_message_no"
        android:text="YES"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/bm_dohyun"
        android:background="#e9e7e7"/>

    <Button
        android:id="@+id/button_delete_message_no"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_message"
        app:layout_constraintStart_toEndOf="@id/button_delete_message_yes"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NO"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/bm_dohyun"
        android:background="#cbcbcb"/>

</androidx.constraintlayout.widget.ConstraintLayout>