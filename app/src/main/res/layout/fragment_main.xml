<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="@+id/main_constraintLayout">

        </androidx.viewpager.widget.ViewPager>

        <RadioGroup
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/main_constraintLayout"
            app:layout_constraintStart_toStartOf="@id/main_constraintLayout"
            app:layout_constraintTop_toBottomOf="@id/main_viewPager">

            <RadioButton
                android:id="@+id/notice_radioButton"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/radio_states_notice"
                android:button="@null"
                android:text="공지사항"/>

            <RadioButton
                android:id="@+id/schedule_radioButton"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/radio_states_schedule"
                android:button="@null"
                android:text="오늘 일정" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>