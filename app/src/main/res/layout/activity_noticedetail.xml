<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_noticedetail_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6cccde">

        <ImageButton
            android:id="@+id/button_noticedetail_off"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:src="@drawable/ic_cross_out"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="공지사항"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bm_dohyun"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_noticedetail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_noticedetail_top"
        app:layout_constraintBottom_toTopOf="@id/view_noticedetail_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/sample_string"
        android:textSize="20dp"
        android:textColor="#000000"
        android:fontFamily="@font/bm_dohyun"/>

    <View
        android:id="@+id/view_noticedetail_background"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/fragment_schedule_background"/>

    <TextView
        android:id="@+id/tv_noticedetail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_noticedetail_background"
        app:layout_constraintBottom_toBottomOf="@id/view_noticedetail_background"
        app:layout_constraintStart_toStartOf="@id/view_noticedetail_background"
        app:layout_constraintEnd_toEndOf="@id/view_noticedetail_background"
        android:text="@string/sample_string"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>