<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="260dp"
    android:layout_height="310dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_addgroupmember"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#6cccde">

        <ImageButton
            android:id="@+id/button_addgroupmember_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_cross_out"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="그룹 멤버 초대하기"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bm_dohyun"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_addgroupmember"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cl_addgroupmember"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_member"/>

    <EditText
        android:id="@+id/et_addgroupmember"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_addgroupmember"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:hint="초대할 멤버의 아이디를 입력하세요"/>

    <Button
        android:id="@+id/button_addgroupmember_invite"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_addgroupmember_cancel"
        android:background="#e9e7e7"
        android:text="초대"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/bm_dohyun"/>

    <Button
        android:id="@+id/button_addgroupmember_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_addgroupmember_invite"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#cbcbcb"
        android:text="취소"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/bm_dohyun"/>

</androidx.constraintlayout.widget.ConstraintLayout>