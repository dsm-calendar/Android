<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_group_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_for_position_group"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>

            <View
                app:layout_constraintTop_toBottomOf="@+id/view_for_position_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/fragment_schedule_background"/>

            <CalendarView
                android:id="@+id/calendar_View_group"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:elevation="10dp"/>

            <TextView
                android:id="@+id/tv_today_group"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/calendar_View_group"
                app:layout_constraintStart_toStartOf="@id/calendar_View_group"
                android:layout_marginTop="20dp"
                android:text="@string/today"
                android:textSize="20dp"
                android:fontFamily="@font/bm_jua"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/schedule_rv_group"
                android:layout_width="300dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_today_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_fragment_schedule"/>

            <ImageButton
                android:id="@+id/schedule_add_button_group"
                android:layout_width="300dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/schedule_rv_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_plus"
                android:background="@drawable/button_plus_rectangle_background"
                android:elevation="10dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/add_schedule_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_group_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>